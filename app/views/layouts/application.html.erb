<!DOCTYPE html>
<html>
  <head>
  <title>MyHack</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
</head>
  </head>

  <body class="bg-gray-900 text-white">
  <div class="container mx-auto min-h-screen px-4">
    <%= yield %>

  <nav>
    <%= link_to "Home", root_path %> |
    <%= link_to "All Posts", posts_path %> |
    <% if user_signed_in? %>
      <%= link_to "New Post", new_post_path %> |
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to log out?" } %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo: false } %>

    <% else %>
      <%= link_to "Login", new_user_session_path %> |
      <%= link_to "Sign Up", new_user_registration_path %>
    <% end %>
  </nav>
</div>
  </body>
</html>

