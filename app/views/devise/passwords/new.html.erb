<div class="min-h-screen flex items-center justify-center bg-gray-900">
  <div class="bg-gray-800 p-16 rounded-lg shadow-lg w-[90vw] max-w-[1500px] min-h-[95vh] mx-auto flex flex-col justify-center">
    <h2 class="text-3xl font-bold text-center text-white mb-16">Forgot Password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-12" }) do |f| %>

      <div>
        <%= f.label :email, "Enter your email to reset password", class: "block text-gray-300 text-2xl font-semibold mb-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-8 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-4 focus:ring-green-500 text-2xl" %>
      </div>

      <div class="flex justify-center">
        <%= f.submit "Send Reset Link", class: "bg-green-500 hover:bg-green-600 text-white px-16 py-6 rounded-lg font-semibold text-2xl" %>
      </div>

    <% end %>

    <div class="text-center mt-12 text-gray-400 text-xl">
      <%= link_to "Back to Log in", new_session_path(resource_name), class: "hover:underline" %>
    </div>
  </div>
</div>

